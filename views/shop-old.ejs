<%- include('include/header') %>

<!-- Page Hero Section -->
<div class="row mb-4">
  <div class="col-12">
    <div class="bg-gradient-primary text-white rounded-custom p-4 p-md-5 text-center shadow-custom fade-in-up">
      <h1 class="display-5 display-md-4 fw-bold mb-2">
        <i class="fas fa-store me-2"></i><%- __('welcome') %>
      </h1>
      <p class="lead mb-0 opacity-90 d-none d-md-block"><%- __('discover_products') %></p>
    </div>
  </div>
</div>

<!-- Search & Filter Section -->
<div class="row mb-4">
  <div class="col-12">
    <div class="card shadow-sm border-0 rounded-3">
      <div class="card-body p-3">
        <form method="GET" action="/shop" id="searchForm">
          <div class="row g-2 g-md-3">
            <!-- Search Input -->
            <div class="col-12 col-md-4 position-relative">
              <div class="search-input-wrapper">
                <i class="fas fa-search position-absolute" style="left: 12px; top: 50%; transform: translateY(-50%); color: #6c757d; z-index: 5;"></i>
                <input type="text" name="q" id="searchInput" value="<%= typeof currentSearch !== 'undefined' ? currentSearch : '' %>" class="form-control ps-5" placeholder="<%- __('search_products') %>..." maxlength="100" autocomplete="off">
                <div class="search-loading" id="searchLoading" style="display: none;">
                  <i class="fas fa-spinner fa-spin"></i>
                </div>
              </div>
              <div class="live-search-dropdown" id="liveSearchDropdown"></div>
            </div>
            
            <!-- Category Filter -->
            <div class="col-6 col-md-2">
              <select name="category" class="form-select" aria-label="Category">
                <option value="All" <%= (currentCategory === 'All') ? 'selected' : '' %>>All Categories</option>
                <% ['Clothing','Shoes','Accessories','Home & Living','Electronics','Sports','Other'].forEach(cat => { %>
                  <option value="<%= cat %>" <%= (currentCategory === cat) ? 'selected' : '' %>><%= cat %></option>
                <% }) %>
              </select>
            </div>
            
            <!-- Sort Dropdown -->
            <div class="col-6 col-md-2">
              <select name="sort" class="form-select" aria-label="Sort by" onchange="this.form.submit()">
                <option value="newest" <%= (typeof currentSort !== 'undefined' && currentSort === 'newest') ? 'selected' : '' %>>Newest First</option>
                <option value="price-low" <%= (typeof currentSort !== 'undefined' && currentSort === 'price-low') ? 'selected' : '' %>>Price: Low to High</option>
                <option value="price-high" <%= (typeof currentSort !== 'undefined' && currentSort === 'price-high') ? 'selected' : '' %>>Price: High to Low</option>
                <option value="popular" <%= (typeof currentSort !== 'undefined' && currentSort === 'popular') ? 'selected' : '' %>>Most Popular</option>
                <option value="name-az" <%= (typeof currentSort !== 'undefined' && currentSort === 'name-az') ? 'selected' : '' %>>Name: A-Z</option>
              </select>
            </div>
            
            <!-- Price Range -->
            <div class="col-6 col-md-2">
              <div class="input-group input-group-sm">
                <span class="input-group-text">$</span>
                <input type="number" name="minPrice" class="form-control" placeholder="Min" value="<%= typeof currentMinPrice !== 'undefined' ? currentMinPrice : '' %>" min="0" step="1">
                <input type="number" name="maxPrice" class="form-control" placeholder="Max" value="<%= typeof currentMaxPrice !== 'undefined' ? currentMaxPrice : '' %>" min="0" step="1">
              </div>
            </div>
            
            <!-- Buttons -->
            <div class="col-6 col-md-2 d-flex gap-2">
              <button type="submit" class="btn btn-primary flex-grow-1">
                <i class="fas fa-filter me-1 d-none d-md-inline"></i>Apply
              </button>
              <a href="/shop" class="btn btn-outline-secondary" title="Reset"><i class="fas fa-undo"></i></a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Results Info Bar -->
<div class="row mb-3">
  <div class="col-12">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
      <div class="d-flex align-items-center gap-2 flex-wrap">
        <span class="badge bg-primary rounded-pill px-3 py-2">
          <i class="fas fa-box me-1"></i><%= typeof totalProducts !== 'undefined' ? totalProducts : products.length %> Products
        </span>
        <% if (currentSearch) { %>
          <span class="badge bg-info rounded-pill px-3 py-2">
            <i class="fas fa-search me-1"></i>"<%= currentSearch %>"
          </span>
        <% } %>
        <% if (currentCategory && currentCategory !== 'All') { %>
          <span class="badge bg-secondary rounded-pill px-3 py-2">
            <i class="fas fa-tag me-1"></i><%= currentCategory %>
          </span>
        <% } %>
        <% if ((typeof currentMinPrice !== 'undefined' && currentMinPrice) || (typeof currentMaxPrice !== 'undefined' && currentMaxPrice)) { %>
          <span class="badge bg-success rounded-pill px-3 py-2">
            <i class="fas fa-dollar-sign me-1"></i>
            <%= currentMinPrice || '0' %> - <%= currentMaxPrice || 'âˆž' %>
          </span>
        <% } %>
      </div>
      <div class="d-none d-md-block text-muted small">
        <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
          Page <%= currentPage %> of <%= totalPages %>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Products Grid -->
<div id="productsContainer" class="row">
  <% if (products && products.length > 0) { %>
    <% products.forEach((product, index) => { %>
      <div class="col-lg-3 col-md-4 col-6 mb-4 product-item fade-in-up" style="animation-delay: <%= index * 0.05 %>s">
        <div class="card product-card h-100 <%= (product.stockQuantity <= 0) ? 'out-of-stock' : '' %>">
          <a href="/product/<%= product._id %>" class="text-decoration-none">
            <!-- Product Image -->
            <div class="position-relative overflow-hidden">
              <img src="/images/<%= product.image || 'product1.svg' %>" class="card-img-top" alt="<%= product.name %>" onerror="this.src='/images/product1.svg'">

              <!-- Stock Badge -->
              <% if (product.stockQuantity <= 0) { %>
                <div class="position-absolute top-0 end-0 m-2 m-md-3">
                  <span class="badge bg-danger">Out of Stock</span>
                </div>
              <% } else if (product.stockQuantity <= 5) { %>
                <div class="position-absolute top-0 end-0 m-2 m-md-3">
                  <span class="badge bg-warning text-dark d-none d-md-inline">Only <%= product.stockQuantity %> left</span>
                  <span class="badge bg-warning text-dark d-md-none"><%= product.stockQuantity %></span>
                </div>
              <% } else { %>
                <div class="position-absolute top-0 end-0 m-2 m-md-3">
                  <span class="badge bg-success d-none d-md-inline"><%= product.stockQuantity %> in stock</span>
                  <span class="badge bg-success d-md-none"><i class="fas fa-check"></i></span>
                </div>
              <% } %>
            </div>
          </a>

          <!-- Product Details -->
          <div class="card-body d-flex flex-column p-2 p-md-3">
            <a href="/product/<%= product._id %>" class="text-decoration-none">
              <h6 class="card-title mb-1 mb-md-2 text-truncate text-dark product-name" title="<%= product.name %>">
                <%= product.name %>
              </h6>
            </a>

            <p class="card-text text-muted small mb-2 flex-grow-1 d-none d-md-block" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
              <%= product.description %>
            </p>

            <!-- Price -->
            <div class="mb-1 mb-md-2">
              <span class="h6 h5-md text-primary fw-bold mb-0">
                $<%= product.basePrice ? product.basePrice.toFixed(2) : (product.price ? product.price.toFixed(2) : '0.00') %>
              </span>
            </div>

            <!-- Delivery Time - Hidden on mobile -->
            <div class="mb-2 d-none d-md-block">
              <small class="text-muted d-flex align-items-center">
                <i class="fas fa-truck me-1"></i>
                <%- __('delivery') %>: <%= product.deliveryTime || 14 %> <%- __('days') %>
              </small>
            </div>
            
            <!-- Action Buttons -->
            <div class="d-flex gap-1 gap-md-2 mt-auto">
              <button class="btn btn-primary btn-sm flex-grow-1 quick-add-btn" 
                      data-product-id="<%= product._id %>" 
                      data-product-name="<%= product.name %>"
                      <%= product.stockQuantity <= 0 ? 'disabled' : '' %>>
                <i class="fas fa-cart-plus me-1 d-none d-md-inline"></i>
                <i class="fas fa-plus d-md-none"></i>
                <span class="d-none d-md-inline">Add</span>
              </button>
              <button class="btn btn-outline-secondary btn-sm quick-view-btn" 
                      data-product-id="<%= product._id %>"
                      title="Quick View">
                <i class="fas fa-eye"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="col-12">
      <div class="text-center py-5">
        <div class="mb-4">
          <i class="fas fa-box-open fa-4x text-muted"></i>
        </div>
        <h3 class="text-muted mb-3">No Products Available</h3>
        <p class="text-muted">Check back later for new arrivals!</p>
      </div>
    </div>
  <% } %>
</div>

