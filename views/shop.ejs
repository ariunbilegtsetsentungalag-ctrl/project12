<script>
// Carousel navigation
document.addEventListener('DOMContentLoaded', function() {
  // Get all carousel buttons
  const carouselBtns = document.querySelectorAll('.carousel-btn');
  console.log('Found', carouselBtns.length, 'carousel buttons');
  
  carouselBtns.forEach(function(btn) {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      
      console.log('Button clicked:', this.className);
      
      const carousel = this.closest('.product-carousel');
      if (!carousel) {
        console.error('No carousel found');
        return;
      }
      
      const track = carousel.querySelector('.carousel-track');
      if (!track) {
        console.error('No track found');
        return;
      }
      
      const direction = this.classList.contains('next') ? 1 : -1;
      const scrollAmount = 300;
      const newPosition = track.scrollLeft + (direction * scrollAmount);
      
      console.log('Scrolling from', track.scrollLeft, 'to', newPosition);
      console.log('Track scrollWidth:', track.scrollWidth, 'clientWidth:', track.clientWidth);
      
      track.scrollLeft = newPosition;
    });
  });
});

// Search Autocomplete
(function() {
  const searchInput = document.getElementById('searchInput');
  const suggestionsContainer = document.getElementById('searchSuggestions');
  let debounceTimer;
  let cachedProducts = null;
  
  if (!searchInput || !suggestionsContainer) return;
  
  // Pre-fetch products on page load for instant search
  fetchProducts();
  
  // Fetch all products once for quick searching
  async function fetchProducts() {
    if (cachedProducts) return cachedProducts;
    try {
      const res = await fetch('/api/products/search?limit=50');
      const data = await res.json();
      cachedProducts = data.products || [];
      return cachedProducts;
    } catch (e) {
      return [];
    }
  }
  
  // Filter products based on search term
  function filterProducts(products, term) {
    const searchLower = term.toLowerCase();
    return products.filter(p => 
      p.name.toLowerCase().includes(searchLower) ||
      (p.description && p.description.toLowerCase().includes(searchLower)) ||
      (p.category && p.category.toLowerCase().includes(searchLower))
    ).slice(0, 5); // Show 5 suggestions
  }
  
  // Render suggestions
  function renderSuggestions(products) {
    if (products.length === 0) {
      suggestionsContainer.innerHTML = '<div style="padding: 15px; text-align: center; color: #6b7280;">No products found</div>';
      suggestionsContainer.classList.add('active');
      return;
    }
    
    suggestionsContainer.innerHTML = products.map(p => `
      <a href="/product/${p._id}" class="search-suggestion-item">
        <img src="/images/${p.image || 'product1.svg'}" onerror="this.src='/images/product1.svg'" alt="${p.name}">
        <div class="suggestion-info">
          <div class="suggestion-name">${p.name}</div>
          <div class="suggestion-category">${p.category || 'Product'}</div>
        </div>
        <div class="suggestion-price">₮${(p.basePrice || p.price || 0).toLocaleString()}</div>
      </a>
    `).join('');
    suggestionsContainer.classList.add('active');
  }
  
  // Input event handler - faster 100ms debounce
  searchInput.addEventListener('input', function() {
    const term = this.value.trim();
    
    clearTimeout(debounceTimer);
    
    if (term.length < 1) {
      suggestionsContainer.classList.remove('active');
      return;
    }
    
    // Instant search if products are cached
    if (cachedProducts) {
      const filtered = filterProducts(cachedProducts, term);
      renderSuggestions(filtered);
    } else {
      debounceTimer = setTimeout(async () => {
        const products = await fetchProducts();
        const filtered = filterProducts(products, term);
        renderSuggestions(filtered);
      }, 100);
    }
  });
  
  // Hide suggestions when clicking outside
  document.addEventListener('click', function(e) {
    if (!e.target.closest('.hero-search')) {
      suggestionsContainer.classList.remove('active');
    }
  });
  
  // Show suggestions on focus if there's text
  searchInput.addEventListener('focus', async function() {
    const term = this.value.trim();
    if (term.length >= 1 && cachedProducts) {
      const filtered = filterProducts(cachedProducts, term);
      renderSuggestions(filtered);
    }
  });
})();

// Quick add to cart
document.addEventListener('click', function(e) {
  if (e.target.closest('.btn-add-cart')) {
    e.preventDefault();
    const btn = e.target.closest('.btn-add-cart');
    const productId = btn.dataset.productId;
    const originalText = btn.innerHTML;
    
    btn.disabled = true;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
    
    fetch('/api/cart/add', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ productId, quantity: 1 })
    })
    .then(res => res.json())
    .then(data => {
      if (data.success) {
        if (typeof showToast === 'function') showToast(data.message, 'success');
        btn.innerHTML = '<i class="fas fa-check"></i> Added!';
        setTimeout(() => { btn.innerHTML = originalText; btn.disabled = false; }, 2000);
      } else if (data.requireLogin) {
        if (typeof showToast === 'function') showToast('Please sign in first', 'warning');
        setTimeout(() => window.location.href = '/login', 1500);
      } else {
        if (typeof showToast === 'function') showToast(data.message || 'Error', 'error');
        btn.innerHTML = originalText;
        btn.disabled = false;
      }
    })
    .catch(() => {
      if (typeof showToast === 'function') showToast('Error adding to cart', 'error');
      btn.innerHTML = originalText;
      btn.disabled = false;
    });
  }
  
  // Quick view
  if (e.target.closest('.btn-quick-view')) {
    e.preventDefault();
    const productId = e.target.closest('.btn-quick-view').dataset.productId;
    showQuickViewModal(productId);
  }
});

async function showQuickViewModal(productId) {
  const modal = document.getElementById('quickViewModal');
  const body = document.getElementById('quickViewBody');
  body.innerHTML = '<div class="text-center py-5"><i class="fas fa-spinner fa-spin fa-3x text-primary"></i></div>';
  
  const bsModal = new bootstrap.Modal(modal);
  bsModal.show();
  
  try {
    const res = await fetch(`/api/products/search?limit=100`);
    const data = await res.json();
    const product = data.products.find(p => p._id === productId);
    
    if (product) {
      body.innerHTML = `
        <div class="row">
          <div class="col-md-5">
            <img src="/images/${product.image || 'product1.svg'}" class="img-fluid rounded" onerror="this.src='/images/product1.svg'">
          </div>
          <div class="col-md-7">
            <span class="badge bg-primary mb-2">${product.category || 'Product'}</span>
            <h4>${product.name}</h4>
            <p class="text-muted">${product.description || ''}</p>
            <h3 class="text-primary mb-3">₮${(product.basePrice || product.price || 0).toLocaleString()}</h3>
            <div class="d-flex gap-2">
              <a href="/product/${product._id}" class="btn btn-outline-primary flex-grow-1">View Details</a>
              <button class="btn btn-primary flex-grow-1 btn-add-cart" data-product-id="${product._id}">
                <i class="fas fa-cart-plus me-1"></i>Add to Cart
              </button>
            </div>
          </div>
        </div>
      `;
    }
  } catch (err) {
    body.innerHTML = '<p class="text-center text-danger">Error loading product</p>';
  }
}
