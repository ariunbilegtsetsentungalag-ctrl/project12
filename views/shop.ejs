<%- include('include/header') %>

<!-- Hero Banner -->
<div class="row mb-4">
  <div class="col-12">
    <div class="hero-banner fade-in-up">
      <div class="hero-content">
        <h1 class="hero-title">
          <i class="fas fa-store me-2"></i><%- __('welcome') %>
        </h1>
        <p class="hero-subtitle d-none d-md-block"><%- __('discover_products') %></p>
        
        <!-- Quick Search -->
        <form method="GET" action="/shop" class="hero-search">
          <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" name="q" id="searchInput" placeholder="Search for products..." value="<%= currentSearch || '' %>" autocomplete="off">
            <button type="submit">Search</button>
          </div>
          <div class="search-suggestions" id="searchSuggestions"></div>
        </form>
      </div>
    </div>
  </div>
</div>

<% if (typeof isFiltering !== 'undefined' && isFiltering) { %>
  <!-- Filtered Results View -->
  <div class="row mb-3">
    <div class="col-12">
      <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <div class="d-flex align-items-center gap-2 flex-wrap">
          <a href="/shop" class="btn btn-sm btn-outline-primary">
            <i class="fas fa-arrow-left me-1"></i>Back to Shop
          </a>
          <span class="badge bg-primary rounded-pill px-3 py-2">
            <i class="fas fa-box me-1"></i><%= totalProducts %> Products
          </span>
          <% if (currentSearch) { %>
            <span class="badge bg-info rounded-pill px-3 py-2">"<%= currentSearch %>"</span>
          <% } %>
          <% if (currentCategory && currentCategory !== 'All') { %>
            <span class="badge bg-secondary rounded-pill px-3 py-2"><%= currentCategory %></span>
          <% } %>
        </div>
        
        <!-- Sort & Filter -->
        <form method="GET" action="/shop" class="d-flex gap-2">
          <input type="hidden" name="q" value="<%= currentSearch || '' %>">
          <input type="hidden" name="category" value="<%= currentCategory || 'All' %>">
          <select name="sort" class="form-select form-select-sm" style="width: auto;" onchange="this.form.submit()">
            <option value="newest" <%= currentSort === 'newest' ? 'selected' : '' %>>Newest</option>
            <option value="price-low" <%= currentSort === 'price-low' ? 'selected' : '' %>>Price: Low→High</option>
            <option value="price-high" <%= currentSort === 'price-high' ? 'selected' : '' %>>Price: High→Low</option>
            <option value="popular" <%= currentSort === 'popular' ? 'selected' : '' %>>Popular</option>
          </select>
        </form>
      </div>
    </div>
  </div>
  
  <div class="row" id="productsContainer">
    <% if (products && products.length > 0) { %>
      <% products.forEach((product, index) => { %>
        <%- include('partials/product-card', { product, index }) %>
      <% }) %>
    <% } else { %>
      <div class="col-12 text-center py-5">
        <i class="fas fa-search fa-4x text-muted mb-3"></i>
        <h3 class="text-muted">No products found</h3>
        <p class="text-muted">Try a different search or <a href="/shop">browse all products</a></p>
      </div>
    <% } %>
  </div>

<% } else { %>
  <!-- Sectioned Shop View -->
  
  <!-- Category Quick Links -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="category-pills">
        <a href="/shop?category=All" class="category-pill active">
          <i class="fas fa-th-large"></i>
          <span>All</span>
        </a>
        <% ['Clothing', 'Shoes', 'Electronics', 'Accessories', 'Sports', 'Home & Living'].forEach(cat => { %>
          <a href="/shop?category=<%= cat %>" class="category-pill">
            <i class="fas fa-<%= cat === 'Clothing' ? 'tshirt' : cat === 'Shoes' ? 'shoe-prints' : cat === 'Electronics' ? 'laptop' : cat === 'Accessories' ? 'gem' : cat === 'Sports' ? 'futbol' : 'home' %>"></i>
            <span><%= cat %></span>
          </a>
        <% }) %>
      </div>
    </div>
  </div>

  <!-- Featured Products Section -->
  <% if (typeof featuredProducts !== 'undefined' && featuredProducts.length > 0) { %>
  <section class="product-section mb-5 fade-in-up">
    <div class="section-header">
      <div class="section-title-wrapper">
        <div class="section-icon featured"><i class="fas fa-star"></i></div>
        <div>
          <h2 class="section-title">Featured Products</h2>
          <p class="section-subtitle">Hand-picked top quality items</p>
        </div>
      </div>
      <a href="/shop?view=all" class="view-all-btn">
        View All <i class="fas fa-arrow-right ms-1"></i>
      </a>
    </div>
    <div class="product-carousel">
      <button class="carousel-btn prev" type="button"><i class="fas fa-chevron-left"></i></button>
      <div class="carousel-track">
        <% featuredProducts.forEach((product, index) => { %>
          <div class="carousel-item-custom">
            <%- include('partials/product-card-carousel', { product }) %>
          </div>
        <% }) %>
      </div>
      <button class="carousel-btn next" type="button"><i class="fas fa-chevron-right"></i></button>
    </div>
  </section>
  <% } %>

  <!-- Best Sellers Section -->
  <% if (typeof bestSellers !== 'undefined' && bestSellers.length > 0) { %>
  <section class="product-section mb-5 fade-in-up" style="animation-delay: 0.1s">
    <div class="section-header">
      <div class="section-title-wrapper">
        <div class="section-icon bestseller"><i class="fas fa-fire"></i></div>
        <div>
          <h2 class="section-title">Best Sellers</h2>
          <p class="section-subtitle">Most popular products this week</p>
        </div>
      </div>
      <a href="/shop?sort=popular&view=all" class="view-all-btn">
        View All <i class="fas fa-arrow-right ms-1"></i>
      </a>
    </div>
    <div class="product-carousel">
      <button class="carousel-btn prev" type="button"><i class="fas fa-chevron-left"></i></button>
      <div class="carousel-track">
        <% bestSellers.forEach((product, index) => { %>
          <div class="carousel-item-custom">
            <%- include('partials/product-card-carousel', { product }) %>
          </div>
        <% }) %>
      </div>
      <button class="carousel-btn next" type="button"><i class="fas fa-chevron-right"></i></button>
    </div>
  </section>
  <% } %>

  <!-- New Arrivals Section -->
  <% if (typeof newArrivals !== 'undefined' && newArrivals.length > 0) { %>
  <section class="product-section mb-5 fade-in-up" style="animation-delay: 0.2s">
    <div class="section-header">
      <div class="section-title-wrapper">
        <div class="section-icon new"><i class="fas fa-bolt"></i></div>
        <div>
          <h2 class="section-title">New Arrivals</h2>
          <p class="section-subtitle">Fresh products just added</p>
        </div>
      </div>
      <a href="/shop?sort=newest&view=all" class="view-all-btn">
        View All <i class="fas fa-arrow-right ms-1"></i>
      </a>
    </div>
    <div class="product-carousel">
      <button class="carousel-btn prev" type="button"><i class="fas fa-chevron-left"></i></button>
      <div class="carousel-track">
        <% newArrivals.forEach((product, index) => { %>
          <div class="carousel-item-custom">
            <%- include('partials/product-card-carousel', { product }) %>
          </div>
        <% }) %>
      </div>
      <button class="carousel-btn next" type="button"><i class="fas fa-chevron-right"></i></button>
    </div>
  </section>
  <% } %>

  <!-- Recommended For You Section -->
  <% if (typeof recommendedProducts !== 'undefined' && recommendedProducts.length > 0) { %>
  <section class="product-section mb-5 fade-in-up" style="animation-delay: 0.3s">
    <div class="section-header">
      <div class="section-title-wrapper">
        <div class="section-icon recommended"><i class="fas fa-heart"></i></div>
        <div>
          <h2 class="section-title">Recommended For You</h2>
          <p class="section-subtitle">Products you might love</p>
        </div>
      </div>
      <a href="/shop?view=all" class="view-all-btn">
        View All <i class="fas fa-arrow-right ms-1"></i>
      </a>
    </div>
    <div class="product-grid">
      <% recommendedProducts.forEach((product, index) => { %>
        <div class="product-grid-item">
          <%- include('partials/product-card-carousel', { product }) %>
        </div>
      <% }) %>
    </div>
  </section>
  <% } %>

  <!-- Browse All CTA -->
  <div class="row mb-4">
    <div class="col-12 text-center">
      <div class="browse-all-cta fade-in-up">
        <h3>Can't find what you're looking for?</h3>
        <p class="text-muted mb-3">Browse our complete catalog of <%= totalProducts %> products</p>
        <a href="/shop?view=all" class="btn btn-primary btn-lg">
          <i class="fas fa-th me-2"></i>Browse All Products
        </a>
      </div>
    </div>
  </div>

<% } %>

<!-- Quick View Modal -->
<div class="modal fade" id="quickViewModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header border-0">
        <h5 class="modal-title"><i class="fas fa-eye me-2"></i>Quick View</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="quickViewBody"></div>
    </div>
  </div>
</div>

