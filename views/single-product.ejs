            try {
                const response = await fetch(`/api/reviews/${reviewId}/dislike`, {
                    method: 'POST'
                });

                const data = await response.json();

                if (data.success) {
                    document.getElementById(`likes-${reviewId}`).textContent = data.likesCount;
                    document.getElementById(`dislikes-${reviewId}`).textContent = data.dislikesCount;
                    loadReviews(); // Reload to update button states
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }

        async function likeReply(reviewId, replyId) {
            try {
                const response = await fetch(`/api/reviews/${reviewId}/replies/${replyId}/like`, {
                    method: 'POST'
                });

                const data = await response.json();

                if (data.success) {
                    loadReviews(); // Reload to update counts and button states
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }

        async function dislikeReply(reviewId, replyId) {
            try {
                const response = await fetch(`/api/reviews/${reviewId}/replies/${replyId}/dislike`, {
                    method: 'POST'
                });

                const data = await response.json();

                if (data.success) {
                    loadReviews(); // Reload to update counts and button states
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }

        async function deleteReview(reviewId) {
            if (!confirm('Are you sure you want to delete this review?')) {
                return;
            }

            try {
                const response = await fetch(`/api/reviews/${reviewId}`, {
                    method: 'DELETE'
                });

                const data = await response.json();

                if (data.success) {
                    showToast('Review deleted successfully', 'success');
                    loadReviews();
                } else {
                    showToast(data.message || 'Error deleting review', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('Error deleting review. Please try again.', 'error');
            }
        }
    </script>

    <%- include('include/footer') %>
</body>
</html>