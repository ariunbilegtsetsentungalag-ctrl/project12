<a href="/product/<%= product._id %>" class="text-decoration-none">
  <div class="product-card-carousel">
    <div class="card-img-wrapper">
      <img src="/images/<%= product.image || 'product1.svg' %>" alt="<%= product.name %>" onerror="this.src='/images/product1.svg'">
      <% if (product.stockQuantity <= 0) { %>
        <span class="product-badge out-of-stock">Sold Out</span>
      <% } else if (product.stockQuantity <= 5) { %>
        <span class="product-badge low-stock">Only <%= product.stockQuantity %> left</span>
      <% } else { %>
        <span class="product-badge in-stock">In Stock</span>
      <% } %>
    </div>
    <div class="card-body">
      <div class="product-category"><%= product.category || 'Product' %></div>
      <h3 class="product-name"><%= product.name %></h3>
      <div class="product-price"><%= (product.basePrice || product.price || 0).toLocaleString() %></div>
      <div class="product-actions" onclick="event.preventDefault(); event.stopPropagation();">
        <button class="btn-add-cart" data-product-id="<%= product._id %>" <%= product.stockQuantity <= 0 ? 'disabled' : '' %>>
          <i class="fas fa-cart-plus me-1"></i>Add
        </button>
        <button class="btn-quick-view" data-product-id="<%= product._id %>">
          <i class="fas fa-eye"></i>
        </button>
      </div>
    </div>
  </div>
</a>
